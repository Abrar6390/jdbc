package com.java;

public class ArmstrongNumber {

	public static void main(String[] args) {
		int no=370;
		int rem;
		int p=0;
		int temp=no;
		while(no>0)
		{
			rem=no%10;
			p=p+(rem*rem*rem);
			no=no/10;
		}
		if(temp==p)
		{
			System.out.println("no is armstrong number");
		}
		else {
			System.out.println("not a Armstrong number");
		}
	}

}
